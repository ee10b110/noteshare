<style>
.placeholder-black::-webkit-input-placeholder {
	color: black !important;
}
.placeholder-black:-moz-placeholder {
	/* FF 4-18 */
	color: black !important;
}
.placeholder-black::-moz-placeholder {
	/* FF 19+ */
	color: black !important;
}
.placeholder-black:-ms-input-placeholder {
	/* IE 10+ */
	color: black !important;
}
.placeholder-black {
	border-radius: 4px !important;
}
</style>

<body ng-app="" ng-controller="index">
	<section id="header" class="appear"></section>
	<div class="navbar navbar-fixed-top" role="navigation" data-0="line-height:100px; height:100px; background-color:rgba(0,0,0,0.3);" data-300="line-height:60px; height:60px; background-color:rgba(0,0,0,1);">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="fa fa-bars color-white"></span>
				</button>
				<h1><a class="navbar-brand" href="index.html" data-0="line-height:90px;" data-300="line-height:50px;">Noteshare
				</a></h1>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav" data-0="margin-top:20px;" data-300="margin-top:5px;">
					<li><a href="index.html">Home</a></li>
					<li class="active"><a href="/signup">Register</a></li>
					<li><a href="/login">Login</a></li>
				</ul>
			</div><!--/.navbar-collapse -->
		</div>
	</div>

	<!-- services --><br><br><br><br>
	<section id="section-services" class="section pad-bot30 bg-white">
		<div class="container">

			<div class="col-sm-6 col-sm-offset-3">

				<h2>Register - Its absolutely free.</h2>
				<!-- show any messages that come back with authentication -->
				<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<!-- LOGIN FORM -->
				<form action="/signup" method="post" name="signupForm" novalidate>
					<div class="form-group">
						<label>First Name</label>	
						<input type="text" class="form-control placeholder-black" name="firstname" required/>
						<small><span style="color:red" ng-show="signupForm.firstname.$dirty && signupForm.firstname.$error.required">Firstname is required.</span></small>
					</div>
					<div class="form-group">
						<label>Last Name</label>
						<input type="text" class="form-control placeholder-black" name="lastname" required>
						<small><span style="color:red" ng-show="signupForm.lastname.$dirty && signupForm.lastname.$error.required">Lastname is required.</span></small>
					</div>
					<div class="form-group">
						<label>College</label>
						<input type="text" class="form-control placeholder-black" name="college" required>
						<small><span style="color:red" ng-show="signupForm.college.$dirty && signupForm.college.$error.required">College is required.</span></small>
					</div>
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control placeholder-black" name="email" required>
						<small><span style="color:red" ng-show="signupForm.email.$dirty && signupForm.email.$error.required">Email is required.</span></small>
					</div>
					<div class="form-group">
						<label>Username</label>
						<input type="text" class="form-control placeholder-black" name="username" required>
						<small><span style="color:red" ng-show="signupForm.username.$dirty && signupForm.username.$error.required">Username is required.</span></small>
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control placeholder-black" name="password" required>
						<small><span style="color:red" ng-show="signupForm.password.$dirty && signupForm.password.$error.required">Password is required.</span></small>
					</div>
					<button type="submit" class="btn btn-primary btn-lg" style="border-radius:4px" ng-disabled="signupForm.firstname.$dirty && signupForm.firstname.$valid &&  
					signupForm.lastname.$dirty && signupForm.lastname.$valid &&
					signupForm.college.$dirty && signupForm.college.$valid && signupForm.email.$dirty && signupForm.email.$valid && signupForm.username.$dirty && signupForm.username.$valid && signupForm.password.$dirty && signupForm.password.$valid">Register</button>
				</form>

				<hr>

				<big>
					<p>Already have an account? <a href="/login"><b>Login</b></a></p>
					<p>Or go <a href="/"><b>home</b></a>.</p>
				</big>
			</div>
		</div>
	</section>

	<section id="footer" class="section footer">
		<div class="container">
			<div class="row animated opacity mar-bot20" data-andown="fadeIn" data-animation="animation">
				<div class="col-sm-12 align-center">
					<ul class="social-network social-circle">
						<li><a href="#" class="icoRss" title="Rss"><i class="fa fa-rss"></i></a></li>
						<li><a href="#" class="icoFacebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
						<li><a href="#" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
						<li><a href="#" class="icoGoogle" title="Google +"><i class="fa fa-google-plus"></i></a></li>
						<li><a href="#" class="icoLinkedin" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
					</ul>				
				</div>
			</div>

			<div class="row align-center copyright">
				<div class="col-sm-12"><p>Copyright &copy; 2015 <a href="http://noteshare.in/">Noteshare</a></p></div>
			</div>
		</div>

	</section>
